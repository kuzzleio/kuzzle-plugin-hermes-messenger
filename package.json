{
  "name": "kuzzle-plugin-hermes-messenger",
  "version": "0.3.0",
  "description": "Kuzzle plugin to send messages using various providers like Twilio, Sendgrid, etc",
  "author": "The Kuzzle Team <support@kuzzle.io>",
  "scripts": {
    "npm:docker": "docker-compose run kuzzle_node_1 npm",
    "install:docker": "npm run npm:docker install kuzzle",
    "dev:docker": "docker-compose up",
    "prod": "node ./features/fixtures/application/app.js",
    "dev": "NODE_ENV=development ergol features/fixtures/application/app.ts -c ergol.config.json",
    "test": "npm run test:lint && npm run test:unit && npm run test:functional",
    "test:unit": "mocha",
    "test:functional": "cucumber-js --exit --fail-fast",
    "test:lint": "eslint ./lib --ext .ts --config .eslintrc.json",
    "test:lint:fix": "eslint ./lib --ext .ts --config .eslintrc.json --fix",
    "prepack": "npm run build",
    "build": "tsc --build tsconfig.json",
    "clean": "touch index.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "doc:prepare": "npx kuzdoc framework:install",
    "doc:dev": "npx kuzdoc repo:dev -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:build": "npx kuzdoc repo:build -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:upload": "npx kuzdoc repo:deploy -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:cloudfront": "npx kuzdoc repo:cloudfront -d /official-plugins/hermes-messenger/1/*",
    "doc:deploy": "npm run doc:upload && npm run doc:cloudfront"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "nodemailer": "^6.9.3",
    "twilio": "^4.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "cucumber": "^6.0.5",
    "ergol": "^1.0.2",
    "eslint": "^8.43.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-kuzzle": "^0.0.6",
    "express": "^4.18.2",
    "kuzzle": "^2.25.0",
    "kuzzle-sdk": "^7.10.8",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "mock-require": "^3.0.3",
    "rewire": "^6.0.0",
    "should": "^13.2.3",
    "should-sinon": "^0.0.6",
    "sinon": "^15.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "kuzzle": "^2.14.5"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json"
  ]
}
