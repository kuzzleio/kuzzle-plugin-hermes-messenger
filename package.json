{
  "name": "kuzzle-plugin-hermes-messenger",
  "version": "0.3.0",
  "description": "Kuzzle plugin to send messages using various providers like Twilio, Sendgrid, etc",
  "author": "The Kuzzle Team <support@kuzzle.io>",
  "scripts": {
    "docker": "docker-compose run kuzzle_node_1 ",
    "dev": "NODE_ENV=development ergol tests/application/app.ts -c ergol.config.json",
    "prod": "node ./dist/tests/application/app.js",
    "test": "jest --runInBand",
    "lint": "eslint ./lib ./tests --ext .ts --config .eslintrc.json",
    "lint:fix": "eslint ./lib ./tests --ext .ts --config .eslintrc.json --fix",
    "prettier": "npx prettier lib/ tests/ --write",
    "build": "tsc --build tsconfig.json",
    "postinstall": "node -e \"process.exit(require('fs').existsSync('./dist') ? 1 : 0)\" && npm run build || true",
    "prepack": "npm run build",
    "clean": "touch index.ts && npm run build | grep TSFILE | cut -d' ' -f 2 | xargs rm",
    "doc:prepare": "npx kuzdoc framework:install",
    "doc:dev": "npx kuzdoc repo:dev -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:build": "npx kuzdoc repo:build -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:upload": "npx kuzdoc repo:deploy -d /official-plugins/hermes-messenger/1/ -v 1",
    "doc:cloudfront": "npx kuzdoc repo:cloudfront -d /official-plugins/hermes-messenger/1/*",
    "doc:deploy": "npm run doc:upload && npm run doc:cloudfront"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.3",
    "twilio": "^4.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.8",
    "ergol": "^1.0.2",
    "eslint": "^8.43.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-kuzzle": "^0.0.6",
    "jest": "^29.5.0",
    "kuzzle": "^2.25.0",
    "kuzzle-sdk": "^7.10.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "kuzzle": "^2.14.5"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.json"
  ]
}
