{
  "compilerOptions": {
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "rootDir": "lib/",
  "include": [
    "lib/**/*.ts",
    "tests/application/**/*.ts",
    "index.ts",
    "vitest.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}